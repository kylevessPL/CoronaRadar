<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CoronaRadar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/picton_blue_500</item>
        <item name="colorPrimaryVariant">@color/picton_blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/carrot_orange_600</item>
        <item name="colorSecondaryVariant">@color/carrot_orange_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="itemTextColor">?attr/colorOnSecondary</item>
        <item name="itemIconTint">?attr/colorOnSecondary</item>
        <item name="colorNavigationItemBackgroundPressed">@color/picton_blue_50</item>
        <item name="colorNavigationItemBackgroundSelected">@color/picton_blue_100</item>
        <item name="colorNavigationItemIconTintSelected">?attr/colorPrimaryVariant</item>
        <item name="materialAlertDialogTheme">@style/Theme.CoronaRadar.AlertDialog</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CoronaRadar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CoronaRadar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CoronaRadar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CoronaRadar.TextAppearance.NavHeader" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">@dimen/abc_text_size_display_2_material</item>
    </style>

    <style name="Theme.CoronaRadar.Widget.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextColor">?attr/itemTextColor</item>
        <item name="itemIconTint">@drawable/menu_item_icon_tint_state</item>
        <item name="itemBackground">@drawable/menu_item_background_color_state</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="Theme.CoronaRadar.Widget.NoRipple" parent="">
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="Theme.CoronaRadar.Widget.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.CoronaRadar.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">
            @style/Theme.CoronaRadar.AlertDialog.Button.Positive
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Theme.CoronaRadar.AlertDialog.Button.Negative
        </item>
        <item name="buttonBarNeutralButtonStyle">
            @style/Theme.CoronaRadar.AlertDialog.Button.Neutral
        </item>
    </style>

    <style name="Theme.CoronaRadar.AlertDialog.Button.Positive" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/OrangeButtonThemeOverlay</item>
        <item name="rippleColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.CoronaRadar.AlertDialog.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.CoronaRadar.AlertDialog.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Theme.CoronaRadar.Widget.Button.Blue" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/BlueButtonThemeOverlay</item>
    </style>

    <style name="Theme.CoronaRadar.Widget.Button.Orange" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/OrangeButtonThemeOverlay</item>
    </style>

    <style name="BlueButtonThemeOverlay">
        <item name="colorPrimary">@color/picton_blue_600</item>
    </style>

    <style name="OrangeButtonThemeOverlay">
        <item name="colorPrimary">@color/carrot_orange_600</item>
    </style>
</resources>