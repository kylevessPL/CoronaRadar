<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CoronaRadar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/picton_blue_500</item>
        <item name="colorPrimaryVariant">@color/picton_blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/trout_600</item>
        <item name="colorSecondaryVariant">@color/trout_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CoronaRadar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CoronaRadar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CoronaRadar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CoronaRadar.TextAppearance.NavHeader" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">@dimen/abc_text_size_display_2_material</item>
    </style>
</resources>