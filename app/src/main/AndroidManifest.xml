<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.piasta.coronaradar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CoronaRadarApplication"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoronaRadar">

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="custom_ica" />

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CoronaRadar.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.user.UserActivity"
            android:exported="true"
            android:label="@string/account"
            android:parentActivityName="pl.piasta.coronaradar.ui.main.MainActivity"
            android:theme="@style/Theme.CoronaRadar.NoActionBar" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="true"
            android:label="@string/settings"
            android:parentActivityName="pl.piasta.coronaradar.ui.main.MainActivity" />
    </application>

</manifest>